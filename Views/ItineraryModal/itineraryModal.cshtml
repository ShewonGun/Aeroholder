    .card-header {
        background: #0F2E6B;
        color: white;
        padding: 14px 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .card-title {
        font-size: 16px;
        font-weight: 600;
        margin: 0;
    }

    .itinerary-content {
        padding: 16px 20px;
        background: #f8f9fa;
    }

    .route-section {
        margin-bottom: 14px;
    }

    .route-badge {
        display: inline-flex;
        align-items: center;
