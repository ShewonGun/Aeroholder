@{
    ViewBag.Title = "Notification Test";
    Layout = "~/Views/Shared/layout.cshtml";
}

<div class="container" style="padding: 40px 20px;">
    <div class="card" style="max-width: 800px; margin: 0 auto;">
        <h1 style="color: #1e3a8a; margin-bottom: 20px;">?? Notification System Test</h1>
        <p style="color: #6b7280; margin-bottom: 30px;">Click the buttons below to test different notification types:</p>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; margin-bottom: 30px;">
            <a href="@Url.Action("TestSuccess")" class="btn btn-primary" style="background: #10b981; justify-content: center;">
                ? Test Success
            </a>
            <a href="@Url.Action("TestError")" class="btn btn-primary" style="background: #ef4444; justify-content: center;">
                ? Test Error
            </a>
            <a href="@Url.Action("TestWarning")" class="btn btn-primary" style="background: #f59e0b; justify-content: center;">
                ?? Test Warning
            </a>
            <a href="@Url.Action("TestInfo")" class="btn btn-primary" style="background: #3b82f6; justify-content: center;">
                ?? Test Info
            </a>
        </div>

        <hr style="border: none; border-top: 1px solid #e5e7eb; margin: 30px 0;" />

        <h2 style="color: #1e3a8a; margin-bottom: 15px; font-size: 1.25rem;">?? How to Use Notifications</h2>
        <div style="background: #f9fafb; padding: 20px; border-radius: 8px; font-family: 'Courier New', monospace; font-size: 14px;">
            <p style="margin-bottom: 10px;"><strong>In your controllers:</strong></p>
            <code style="display: block; color: #059669; margin: 5px 0;">using AeroHolder_new.Helpers;</code>
            <br />
            <code style="display: block; color: #dc2626; margin: 5px 0;">NotificationHelper.Success(TempData, "Your message");</code>
            <code style="display: block; color: #dc2626; margin: 5px 0;">NotificationHelper.Error(TempData, "Your message");</code>
            <code style="display: block; color: #d97706; margin: 5px 0;">NotificationHelper.Warning(TempData, "Your message");</code>
            <code style="display: block; color: #2563eb; margin: 5px 0;">NotificationHelper.Info(TempData, "Your message");</code>
        </div>

        <div style="margin-top: 30px; padding: 15px; background: #eff6ff; border-left: 4px solid #3b82f6; border-radius: 4px;">
            <strong style="color: #1e40af;">?? Tip:</strong>
            <p style="color: #1e40af; margin-top: 5px;">
                Success, Warning, and Info notifications auto-close after 5 seconds.
                Error notifications stay visible until manually closed.
            </p>
        </div>

        <div style="margin-top: 20px; text-align: center;">
            <a href="@Url.Action("Login", "Account")" class="btn btn-outline">
                ? Back to Login
            </a>
        </div>
    </div>
</div>
