@* Add Shareholder Modal *@
<div class="modal-overlay" id="addShareholderModal" style="display: none;">
    <div class="modal-dialog-custom">
        <div class="modal-content-custom">
            <div class="modal-header-custom">
                <span class="modal-title-custom">Add Shareholder</span>
                <button type="button" class="btn-close-custom" onclick="closeAddModal()">✕</button>
            </div>
            <div class="modal-body-custom">
                <form id="addShareholderForm">
                    @* Shareholder Information Section *@
                    <div class="form-section">
                        <div class="section-header">
                            <span class="section-title">Shareholder Information</span>
                            <span class="section-chevron">▼</span>
                        </div>
                        <div class="section-content">
                            <div class="form-row">
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input type="text" id="firstName" placeholder="Primera">
                                </div>
                                <div class="form-group">
                                    <label>Last name</label>
                                    <input type="text" id="lastName" placeholder="Weerakon">
                                </div>
                                <div class="form-group">
                                    <label>Country</label>
                                    <select id="country">
                                        <option>SriLanka</option>
                                        <option>India</option>
                                        <option>USA</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>folion ID</label>
                                    <input type="text" id="folionId" placeholder="FLN565">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group full-width">
                                    <label>Full name(Passport Name)</label>
                                    <input type="text" id="fullName" placeholder="Chamalie Primera  Weerakoon">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group">
                                    <label>Address 1</label>
                                    <input type="text" id="address1" placeholder="Malabe">
                                </div>
                                <div class="form-group">
                                    <label>Address 2</label>
                                    <input type="text" id="address2" placeholder="SriLanka">
                                </div>
                                <div class="form-group">
                                    <label>City</label>
                                    <input type="text" id="city" placeholder="Malabe">
                                </div>
                                <div class="form-group">
                                    <label>company/individual</label>
                                    <select id="companyIndividual">
                                        <option>Srilankan Airlines</option>
                                        <option>Individual</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group">
                                    <label>No. of shares</label>
                                    <div class="number-input">
                                        <button type="button" onclick="decrementValue('noOfShares')">-</button>
                                        <input type="text" id="noOfShares" value="00" readonly>
                                        <button type="button" onclick="incrementValue('noOfShares')">+</button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>No. of Tickets Issued</label>
                                    <div class="number-input">
                                        <button type="button" onclick="decrementValue('noOfTickets')">-</button>
                                        <input type="text" id="noOfTickets" value="00" readonly>
                                        <button type="button" onclick="incrementValue('noOfTickets')">+</button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Entitlement</label>
                                    <div class="entitlement-input">
                                        <select id="entitlementLetter">
                                            <option value="">-</option>
                                            <option value="A">A</option>
                                            <option value="B">B</option>
                                            <option value="C">C</option>
                                            <option value="D">D</option>
                                            <option value="E">E</option>
                                            <option value="F">F</option>
                                            <option value="G">G</option>
                                            <option value="H">H</option>
                                            <option value="I">I</option>
                                            <option value="J">J</option>
                                            <option value="K">K</option>
                                            <option value="L">L</option>
                                            <option value="M">M</option>
                                            <option value="N">N</option>
                                            <option value="O">O</option>
                                            <option value="P">P</option>
                                            <option value="Q">Q</option>
                                            <option value="R">R</option>
                                            <option value="S">S</option>
                                            <option value="T">T</option>
                                            <option value="U">U</option>
                                            <option value="V">V</option>
                                            <option value="W">W</option>
                                            <option value="X">X</option>
                                            <option value="Y">Y</option>
                                            <option value="Z">Z</option>
                                        </select>
                                        <input type="number" id="entitlementNumber" min="0" max="99" placeholder="00">
                                    </div>
                                </div>
                            </div>
                            <div class="add-btn-row">
                                <button type="button" class="btn-add" onclick="addPassportItem()">
                                    <span>+</span> Add Passport
                                </button>
                            </div>
                        </div>
                    </div>

                    @* Add Passport Information Section *@
                    <div class="form-section">
                        <div class="section-header">
                            <span class="section-title">Add Passport Information</span>
                            <span class="section-chevron">▼</span>
                        </div>
                        <div class="section-content">
                            <div class="items-list" id="passportList">
                                @* Passport items will be added here dynamically *@
                            </div>
                            <div class="counter-row">
                                <span class="counter-text">No. of Passports : <span id="passportCount">02</span></span>
                            </div>
                            <div class="add-btn-row">
                                <button type="button" class="btn-add" onclick="addDependentItem()">
                                    <span>+</span> Add Dependant
                                </button>
                            </div>
                        </div>
                    </div>

                    @* Dependent Passport Information Section *@
                    <div class="form-section">
                        <div class="section-header">
                            <span class="section-title">Dependent Passport Information</span>
                            <span class="section-chevron">▼</span>
                        </div>
                        <div class="section-content">
                            <div class="items-list" id="dependentList">
                                @* Dependent items will be added here dynamically *@
                            </div>
                            <div class="counter-row">
                                <span class="counter-text">No. of Dependants : <span id="dependentCount">02</span></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer-custom">
                <button type="button" class="btn-save" onclick="saveShareholder()">Save</button>
            </div>
        </div>
    </div>
</div>

