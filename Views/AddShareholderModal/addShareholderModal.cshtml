</style>

<script>
    let passportCounter = 0;
    let dependentCounter = 0;

    function incrementValue(id) {
        const input = document.getElementById(id);
        let value = parseInt(input.value) || 0;
        value++;
        input.value = value.toString().padStart(2, '0');
    }

    function decrementValue(id) {
        const input = document.getElementById(id);
        let value = parseInt(input.value) || 0;
        if (value > 0) {
            value--;
            input.value = value.toString().padStart(2, '0');
        }
    }

    function addPassportItem() {
        passportCounter++;
        const passportHtml = `
            <div class="item-box passport-item">
                <button type="button" class="btn-remove" onclick="removePassport(this)">✕</button>
                <div class="item-row">
                    <div class="item-group">
                        <label>Passport number</label>
                        <input type="text" placeholder="600 5465758">
                    </div>
                    <div class="item-group">
                        <label>Issued country</label>
                        <input type="text" placeholder="Sri lanka">
                    </div>
                    <div class="item-group">
                        <label>Expire Date</label>
                        <div class="date-input">
                            <input type="text" placeholder="DD/MM/YYYY">
                            <span class="calendar-icon">📅</span>
                        </div>
                    </div>
                    <div class="item-group">
                        <label>Issued date</label>
                        <div class="date-input">
                            <input type="text" placeholder="DD/MM/YYYY">
                            <span class="calendar-icon">📅</span>
                        </div>
                    </div>
                </div>
            </div>
        `;
        document.getElementById('passportList').insertAdjacentHTML('beforeend', passportHtml);
        updatePassportCount();
    }

    function addDependentItem() {
        dependentCounter++;
        const dependentHtml = `
            <div class="item-box dependent-item">
                <button type="button" class="btn-remove" onclick="removeDependent(this)">✕</button>
                <div class="item-row-3">
                    <div class="item-group">
                        <label>Full Name</label>
                        <input type="text" placeholder="Buddhini Nanayakkara">
                    </div>
                    <div class="item-group">
                        <label>Relationship</label>
                        <input type="text" placeholder="Daughter">
                    </div>
                    <div class="item-group">
                        <label>Passport number</label>
                        <input type="text" placeholder="600 5465758">
                    </div>
                </div>
            </div>
        `;
        document.getElementById('dependentList').insertAdjacentHTML('beforeend', dependentHtml);
        updateDependentCount();
    }

    function updatePassportCount() {
        const count = document.querySelectorAll('#passportList .passport-item').length;
        document.getElementById('passportCount').textContent = count.toString().padStart(2, '0');
    }

    function updateDependentCount() {
        const count = document.querySelectorAll('#dependentList .dependent-item').length;
        document.getElementById('dependentCount').textContent = count.toString().padStart(2, '0');
    }

    function removePassport(element) {
        element.closest('.passport-item').remove();
        updatePassportCount();
    }

    function removeDependent(element) {
        element.closest('.dependent-item').remove();
        updateDependentCount();
    }

    function closeAddModal() {
        document.getElementById('addShareholderModal').style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    function saveShareholder() {
        // Collect form data
        const entitlementLetter = document.getElementById('entitlementLetter')?.value || '';
        const entitlementNumber = document.getElementById('entitlementNumber')?.value || '0';
        const formattedNumber = parseInt(entitlementNumber).toString().padStart(2, '0');
        const entitlementValue = entitlementLetter + formattedNumber; // e.g., "A05" or "B12"

        const formData = {
            FirstName: document.getElementById('firstName')?.value?.trim(),
            LastName: document.getElementById('lastName')?.value?.trim(),
            Country: document.getElementById('country')?.value,
            FolioID: document.getElementById('folionId')?.value?.trim(),
            FullName: document.getElementById('fullName')?.value?.trim(),
            Address1: document.getElementById('address1')?.value?.trim(),
            Address2: document.getElementById('address2')?.value?.trim(),
            City: document.getElementById('city')?.value?.trim(),
            CompanyIndividual: document.getElementById('companyIndividual')?.value,
            NoOfShares: parseInt(document.getElementById('noOfShares')?.value) || 0,
            NoOfTicketsIssued: parseInt(document.getElementById('noOfTickets')?.value) || 0,
            Entitlement: entitlementValue
        };

        // Show loading state
        const saveBtn = document.querySelector('.btn-save');
        const originalText = saveBtn.textContent;
        saveBtn.textContent = 'Saving...';
        saveBtn.disabled = true;

        console.log('Saving shareholder:', formData);

        // Send data to server
        fetch('@Url.Action("AddShareholder", "ShareholderListPage")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(formData)
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Success - close modal and reload to show notification
                closeAddModal();
                window.location.reload();
            } else {
                // Error - keep modal open, add URL parameter to show modal after reload
                const currentUrl = new URL(window.location.href);
                currentUrl.searchParams.set('showAddModal', 'true');
                currentUrl.searchParams.set('formError', 'true');
                window.location.href = currentUrl.toString();
            }
        })
        .catch(error => {
            console.error('Error saving shareholder:', error);
            // Network error - reload with modal parameter
            const currentUrl = new URL(window.location.href);
            currentUrl.searchParams.set('showAddModal', 'true');
            currentUrl.searchParams.set('formError', 'true');
            window.location.href = currentUrl.toString();
        });
    }

    // Format entitlement number input to 2 digits
    document.addEventListener('DOMContentLoaded', function() {
        const entitlementNumberInput = document.getElementById('entitlementNumber');
        if (entitlementNumberInput) {
            entitlementNumberInput.addEventListener('blur', function() {
                if (this.value) {
                    const num = parseInt(this.value) || 0;
                    if (num > 99) {
                        this.value = 99;
                    } else if (num < 0) {
                        this.value = 0;
                    }
                    this.value = num.toString().padStart(2, '0');
                }
            });
        }

        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('showAddModal') === 'true') {
            // Reopen the Add modal
            document.getElementById('addShareholderModal').style.display = 'flex';
            document.body.style.overflow = 'hidden';
            
            // Clean up URL
            const newUrl = new URL(window.location.href);
            newUrl.searchParams.delete('showAddModal');
            newUrl.searchParams.delete('formError');
            window.history.replaceState({}, '', newUrl.toString());
        }

        // Initialize passport and dependent items if needed
        setTimeout(function() {
            if (document.getElementById('passportList') && document.getElementById('passportList').children.length === 0) {
                addPassportItem();
                addPassportItem();
            }
            if (document.getElementById('dependentList') && document.getElementById('dependentList').children.length === 0) {
                addDependentItem();
            }
        }, 100);
    });
</script>
