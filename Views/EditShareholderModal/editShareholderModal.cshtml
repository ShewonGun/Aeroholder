<script>
    let editPassportCounter = 0;
    let editDependentCounter = 0;

    function incrementEditValue(id) {
        const input = document.getElementById(id);
        let value = parseInt(input.value) || 0;
        value++;
        input.value = value.toString().padStart(2, '0');
    }

    function decrementEditValue(id) {
        const input = document.getElementById(id);
        let value = parseInt(input.value) || 0;
        if (value > 0) {
            value--;
            input.value = value.toString().padStart(2, '0');
        }
    }

    function addEditPassportItem() {
        editPassportCounter++;
        const passportHtml = `
            <div class="item-box passport-item">
                <button type="button" class="btn-remove" onclick="removeEditPassport(this)">?</button>
                <div class="item-row">
                    <div class="item-group">
                        <label>Passport number</label>
                        <input type="text" placeholder="600 5465758">
                    </div>
                    <div class="item-group">
                        <label>Issued country</label>
                        <input type="text" placeholder="Sri lanka">
                    </div>
                    <div class="item-group">
                        <label>Expire Date</label>
                        <div class="date-input">
                            <input type="text" placeholder="DD/MM/YYYY">
                            <span class="calendar-icon">??</span>
                        </div>
                    </div>
                    <div class="item-group">
                        <label>Issued date</label>
                        <div class="date-input">
                            <input type="text" placeholder="DD/MM/YYYY">
                            <span class="calendar-icon">??</span>
                        </div>
                    </div>
                </div>
            </div>
        `;
        document.getElementById('edit_passportList').insertAdjacentHTML('beforeend', passportHtml);
        updateEditPassportCount();
    }

    function addEditDependentItem() {
        editDependentCounter++;
        const dependentHtml = `
            <div class="item-box dependent-item">
                <button type="button" class="btn-remove" onclick="removeEditDependent(this)">?</button>
                <div class="item-row-3">
                    <div class="item-group">
                        <label>Full Name</label>
                        <input type="text" placeholder="Buddhini Nanayakkara">
                    </div>
                    <div class="item-group">
                        <label>Relationship</label>
                        <input type="text" placeholder="Daughter">
                    </div>
                    <div class="item-group">
                        <label>Passport number</label>
                        <input type="text" placeholder="600 5465758">
                    </div>
                </div>
            </div>
        `;
        document.getElementById('edit_dependentList').insertAdjacentHTML('beforeend', dependentHtml);
        updateEditDependentCount();
    }

    function updateEditPassportCount() {
        const count = document.querySelectorAll('#edit_passportList .passport-item').length;
        document.getElementById('edit_passportCount').textContent = count.toString().padStart(2, '0');
    }

    function updateEditDependentCount() {
        const count = document.querySelectorAll('#edit_dependentList .dependent-item').length;
        document.getElementById('edit_dependentCount').textContent = count.toString().padStart(2, '0');
    }

    function removeEditPassport(element) {
        element.closest('.passport-item').remove();
        updateEditPassportCount();
    }

    function removeEditDependent(element) {
        element.closest('.dependent-item').remove();
        updateEditDependentCount();
    }

    function closeEditModal() {
        document.getElementById('editShareholderModal').style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    function loadShareholderData(folioId) {
        // Show loading state
        const modal = document.getElementById('editShareholderModal');
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden';

        // Fetch shareholder data from server
        fetch('@Url.Action("GetShareholder", "ShareholderListPage")?folioId=' + encodeURIComponent(folioId))
            .then(response => response.json())
            .then(result => {
                if (result.success && result.data) {
                    const data = result.data;
                    
                    // Populate form fields
                    document.getElementById('edit_shareholderId').value = data.ShareholderID || '';
                    document.getElementById('edit_firstName').value = data.FirstName || '';
                    document.getElementById('edit_lastName').value = data.LastName || '';
                    document.getElementById('edit_fullName').value = data.FullName || '';
                    document.getElementById('edit_folionId').value = data.FolioID || '';
                    document.getElementById('edit_country').value = data.Country || 'SriLanka';
                    document.getElementById('edit_address1').value = data.Address1 || '';
                    document.getElementById('edit_address2').value = data.Address2 || '';
                    document.getElementById('edit_city').value = data.City || '';
                    document.getElementById('edit_companyIndividual').value = data.CompanyIndividual || 'Individual';
                    document.getElementById('edit_noOfShares').value = (data.NoOfShares || 0).toString().padStart(2, '0');
                    document.getElementById('edit_noOfTickets').value = (data.NoOfTicketsIssued || 0).toString().padStart(2, '0');
                    
                    // Parse entitlement value (e.g., "A05" -> letter="A", number="05")
                    const entitlement = data.Entitlement || '';
                    if (entitlement.length > 0) {
                        const letter = entitlement.charAt(0); // First character
                        const number = entitlement.substring(1); // Rest of the string
                        document.getElementById('edit_entitlementLetter').value = letter;
                        document.getElementById('edit_entitlementNumber').value = number;
                    } else {
                        document.getElementById('edit_entitlementLetter').value = '';
                        document.getElementById('edit_entitlementNumber').value = '';
                    }
                    
                    // Clear passport and dependent lists
                    document.getElementById('edit_passportList').innerHTML = '';
                    document.getElementById('edit_dependentList').innerHTML = '';
                    updateEditPassportCount();
                    updateEditDependentCount();
                } else {
                    // Error loading data - close modal and reload to show notification
                    closeEditModal();
                    window.location.reload();
                }
            })
            .catch(error => {
                console.error('Error loading shareholder data:', error);
                // Network error - close modal and reload to show notification
                closeEditModal();
                window.location.reload();
            });
    }

    function updateShareholder() {
        // Collect form data
        const entitlementLetter = document.getElementById('edit_entitlementLetter')?.value || '';
        const entitlementNumber = document.getElementById('edit_entitlementNumber')?.value || '0';
        const formattedNumber = parseInt(entitlementNumber).toString().padStart(2, '0');
        const entitlementValue = entitlementLetter + formattedNumber; // e.g., "A05" or "B12"

        const formData = {
            ShareholderID: parseInt(document.getElementById('edit_shareholderId')?.value) || 0,
            FirstName: document.getElementById('edit_firstName')?.value?.trim(),
            LastName: document.getElementById('edit_lastName')?.value?.trim(),
            Country: document.getElementById('edit_country')?.value,
            FolioID: document.getElementById('edit_folionId')?.value?.trim(),
            FullName: document.getElementById('edit_fullName')?.value?.trim(),
            Address1: document.getElementById('edit_address1')?.value?.trim(),
            Address2: document.getElementById('edit_address2')?.value?.trim(),
            City: document.getElementById('edit_city')?.value?.trim(),
            CompanyIndividual: document.getElementById('edit_companyIndividual')?.value,
            NoOfShares: parseInt(document.getElementById('edit_noOfShares')?.value) || 0,
            NoOfTicketsIssued: parseInt(document.getElementById('edit_noOfTickets')?.value) || 0,
            Entitlement: entitlementValue
        };

        // Show loading state
        const updateBtn = document.querySelector('#editShareholderModal .btn-save');
        const originalText = updateBtn.textContent;
        updateBtn.textContent = 'Updating...';
        updateBtn.disabled = true;

        console.log('Updating shareholder:', formData);

        // Send data to server
        fetch('@Url.Action("UpdateShareholder", "ShareholderListPage")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(formData)
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Success - close modal and reload to show notification
                closeEditModal();
                window.location.reload();
            } else {
                // Error - keep modal open, add URL parameter to show modal after reload
                const currentUrl = new URL(window.location.href);
                currentUrl.searchParams.set('showEditModal', 'true');
                currentUrl.searchParams.set('editFolioId', formData.FolioID);
                currentUrl.searchParams.set('formError', 'true');
                window.location.href = currentUrl.toString();
            }
        })
        .catch(error => {
            console.error('Error updating shareholder:', error);
            // Network error - reload with modal parameter
            const currentUrl = new URL(window.location.href);
            currentUrl.searchParams.set('showEditModal', 'true');
            currentUrl.searchParams.set('editFolioId', formData.FolioID);
            currentUrl.searchParams.set('formError', 'true');
            window.location.href = currentUrl.toString();
        });
    }

    // Check URL parameters to reopen modal after error
    document.addEventListener('DOMContentLoaded', function() {
        // Format entitlement number input to 2 digits
        const editEntitlementNumberInput = document.getElementById('edit_entitlementNumber');
        if (editEntitlementNumberInput) {
            editEntitlementNumberInput.addEventListener('blur', function() {
                if (this.value) {
                    const num = parseInt(this.value) || 0;
                    if (num > 99) {
                        this.value = 99;
                    } else if (num < 0) {
                        this.value = 0;
                    }
                    this.value = num.toString().padStart(2, '0');
                }
            });
        }

        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('showEditModal') === 'true') {
            const folioId = urlParams.get('editFolioId');
            if (folioId) {
                // Reopen the Edit modal with the shareholder data
                loadShareholderData(folioId);
            }
            
            // Clean up URL
            const newUrl = new URL(window.location.href);
