@model string

@{
    var activePage = Model ?? "Dashboard";
}

<style>
    .page-header-outer {
        width: 100%;
        display: flex;
        justify-content: center;
        margin-top: 30px;
        margin-bottom: 20px;
    }
    .page-header {
        max-width: 1320px;
        width: 100%;
        background: linear-gradient(90deg, #1D5AD1 0%, #1D5AD1 15%, #0F2E6B 100%);
        border-radius: 12px;
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        min-height: 90px;
        box-shadow: 0 2px 8px rgba(30, 58, 138, 0.08);
        margin: 0 40px;
    }
    .silhouette-bg {
        position: absolute;
        left: 30px;
        bottom: 0;
        height: 70px;
        z-index: 1;
        opacity: 0.9;
        pointer-events: none;
    }
    .page-header-container {
        width: 100%;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        gap: 20px;
        position: relative;
        z-index: 2;
        padding: 0 40px;
    }
    .header-tab {
        padding: 10px 24px;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
        border: 2px solid transparent;
        box-shadow: 0 2px 8px rgba(30, 58, 138, 0.08);
    }
    .header-tab.active {
        background: white;
        color: #1e3a8a;
    }
    .header-tab.inactive {
        background: transparent;
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.3);
    }
    .header-tab.inactive:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.5);
    }
    .tab-icon {
        width: 18px;
        height: 18px;
    }
    @@media (max-width: 1400px) {
        .page-header, .content-container {
            max-width: 100%;
        }
    }
    @@media (max-width: 768px) {
        .page-header {
            margin: 0 20px;
            min-height: 80px;
        }
        .page-header-container {
            flex-direction: column;
            padding: 15px 20px;
            gap: 12px;
        }
        .header-tab {
            width: 100%;
            justify-content: center;
            padding: 10px 20px;
            font-size: 0.9rem;
        }
        .silhouette-bg {
            left: 10px;
            height: 50px;
        }
    }
</style>

<div class="page-header-outer">
    <div class="page-header">
        <img class="silhouette-bg" src="@Url.Content("~/Assets/footer img.png")" alt="Silhouettes" />
        <div class="page-header-container">
            <a href="@Url.Action("Index", "Home")" class="header-tab @(activePage == "Dashboard" ? "active" : "inactive")">
                <svg class="tab-icon" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M4 13h6c.55 0 1-.45 1-1V4c0-.55-.45-1-1-1H4c-.55 0-1 .45-1 1v8c0 .55.45 1 1 1zm0 8h6c.55 0 1-.45 1-1v-4c0-.55-.45-1-1-1H4c-.55 0-1 .45-1 1v4c0 .55.45 1 1 1zm10 0h6c.55 0 1-.45 1-1v-8c0-.55-.45-1-1-1h-6c-.55 0-1 .45-1 1v8c0 .55.45 1 1 1zM13 4v4c0 .55.45 1 1 1h6c.55 0 1-.45 1-1V4c0-.55-.45-1-1-1h-6c-.55 0-1 .45-1 1z" />
                </svg>
                Dashboard
            </a>
            <a href="@Url.Action("ShareholderList", "Shareholder")" class="header-tab @(activePage == "ShareholderList" ? "active" : "inactive")">
                <svg class="tab-icon" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" />
                </svg>
                Shareholder List
            </a>
        </div>
    </div>
</div>
