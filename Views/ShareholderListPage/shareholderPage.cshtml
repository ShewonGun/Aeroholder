@model List<AeroHolder_new.Models.ShareholderModel>
@{
    Layout = null;
    var userName = "Pramodh Lihinikaduwa";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AeroHolder - Shareholder List</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: white;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .page-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding-bottom: 40px;
        }

        .content-container {
            max-width: 1320px;
            margin: 0 auto;
            flex: 1;
            width: 100%;
            background: #f3f4f6;
            border-radius: 12px;
            padding: 30px 0 15px 0;
        }

        .shareholder-table {
            margin-bottom: 20px;
        }

        .error-message {
            background: #fee2e2;
            border: 1px solid #fca5a5;
            color: #991b1b;
            padding: 15px;
            margin: 20px 40px;
            border-radius: 8px;
        }

        .no-data-message {
            text-align: center;
            padding: 40px;
            color: #6b7280;
            font-size: 16px;
        }

        @@media (max-width: 768px) {
            .content-container {
                padding: 0 20px;
            }
        }
    </style>
</head>
<body>
    @* Navbar *@
    @Html.Partial("~/Views/Shared/navbar.cshtml")

    @* Page Header with Tabs *@
    @Html.Partial("~/Views/ShareholderListPage/Components/pageHeader.cshtml", "ShareholderList")

    <div class="page-wrapper">
        <div class="content-container">
            @* Search Bar *@
            @Html.Partial("~/Views/ShareholderListPage/Components/searchBar.cshtml", "Search by folio id, passport number...")

            @if (ViewBag.Error != null)
            {
                <div class="error-message">
                    <strong>Error:</strong> @ViewBag.Error
                </div>
            }

            @* Shareholder Table *@
            <div class="shareholder-table">
                @if (Model != null && Model.Any())
                {
                    int rowNumber = 1;
                    foreach (var shareholder in Model)
                    {
                        var shareholderRow = new AeroHolder_new.Models.ShareholderRowModel
                        {
                            RowNumber = rowNumber++,
                            FolioID = shareholder.FolioID,
                            Name = shareholder.FullName,
                            TicketsIssued = shareholder.NoOfTicketsIssued,
                            Passports = shareholder.NoOfPassports
                        };
                        @Html.Partial("~/Views/ShareholderListPage/Components/shareHolderRow.cshtml", shareholderRow)
                    }
                }
                else
                {
                    <div class="no-data-message">
                        <p>No shareholders found. Click "Add Shareholder" to create a new record.</p>
                    </div>
                }
            </div>

            @* Pagination *@
            @{
                var totalItems = Model != null ? Model.Count : 0;
                var pageSize = 10;
                var totalPages = (int)Math.Ceiling((double)totalItems / pageSize);
            }
            @Html.Partial("~/Views/ShareholderListPage/Components/pagination.cshtml", new AeroHolder_new.Models.PaginationModel
            {
                CurrentPage = 1,
                TotalPages = totalPages > 0 ? totalPages : 1,
                PageSize = pageSize,
                TotalItems = totalItems
            })
        </div>
    </div>

    @* Footer *@
    @Html.Partial("~/Views/Shared/footer.cshtml")

    @* Include Notification Component *@
    @Html.Partial("_Notification")

    @* Add Shareholder Modal *@
    @Html.Partial("~/Views/AddShareholderModal/addShareholderModal.cshtml")
    
    @* Edit Shareholder Modal *@
    @Html.Partial("~/Views/EditShareholderModal/editShareholderModal.cshtml")

    @* Delete Confirmation Modal *@
    @Html.Partial("~/Views/DeleteConfirmModal/deleteConfirmModal.cshtml")
    
    @* Itinerary Modal *@
    @Html.Partial("~/Views/ItineraryModal/itineraryModal.cshtml")

    <script type="text/javascript">
        console.log('=== Loading global shareholder functions ===');
        
        // Global functions - defined on window object for immediate availability
        window.viewItinerary = function(folioId, shareholderName) {
            console.log('viewItinerary called with:', folioId, shareholderName);
            if (typeof openItineraryModal === 'function') {
                openItineraryModal(folioId, shareholderName);
            } else {
                console.error('Itinerary modal not loaded');
                alert('Itinerary modal is not available. Please refresh the page.');
            }
        };

        window.viewMoreInfo = function(folioId) {
            console.log('viewMoreInfo called with:', folioId);
            if (typeof loadShareholderData === 'function') {
                loadShareholderData(folioId);
            } else {
                console.error('Edit modal not loaded');
                alert('Edit modal is not available. Please refresh the page.');
            }
        };

        window.viewReport = function(folioId) {
            console.log('viewReport called with:', folioId);
            window.location.href = '/Report?folioId=' + encodeURIComponent(folioId);
        };

        window.deleteShareholder = function(folioId) {
            console.log('deleteShareholder called with:', folioId);
            if (typeof showDeleteConfirmation === 'function') {
                showDeleteConfirmation(folioId);
            } else {
                if (confirm('Are you sure you want to delete shareholder ' + folioId + '?')) {
                    fetch('/ShareholderListPage/DeleteShareholder', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ folioId: folioId })
                    })
                    .then(function(r) { return r.json(); })
                    .then(function(d) {
                        alert(d.success ? 'Shareholder deleted successfully' : 'Failed: ' + d.message);
                        if (d.success) location.reload();
                    })
                    .catch(function(e) { alert('Error: ' + e.message); });
                }
            }
        };
        
        console.log('Global functions loaded:', {
            viewItinerary: typeof window.viewItinerary,
            viewMoreInfo: typeof window.viewMoreInfo,
            viewReport: typeof window.viewReport,
            deleteShareholder: typeof window.deleteShareholder
        });
        
        // Check for modal functions on DOM ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function() {
                console.log('DOM loaded. Modal functions:', {
                    openItineraryModal: typeof openItineraryModal,
                    loadShareholderData: typeof loadShareholderData,
                    showDeleteConfirmation: typeof showDeleteConfirmation
                });
            });
        } else {
            console.log('DOM already loaded. Modal functions:', {
                openItineraryModal: typeof openItineraryModal,
                loadShareholderData: typeof loadShareholderData,
                showDeleteConfirmation: typeof showDeleteConfirmation
            });
        }
    </script>
</body>
</html>
