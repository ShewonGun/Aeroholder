@model List<AeroHolder_new.Models.ShareholderModel>
@{
    Layout = null;
    var userName = "Pramodh Lihinikaduwa";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AeroHolder - Shareholder List</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: white;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .page-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding-bottom: 40px;
        }

        .content-container {
            max-width: 1320px;
            margin: 0 auto;
            flex: 1;
            width: 100%;
            background: #f3f4f6;
            border-radius: 12px;
            padding: 30px 0 15px 0;
        }

        .shareholder-table {
            margin-bottom: 20px;
        }

        .error-message {
            background: #fee2e2;
            border: 1px solid #fca5a5;
            color: #991b1b;
            padding: 15px;
            margin: 20px 40px;
            border-radius: 8px;
        }

        .no-data-message {
            text-align: center;
            padding: 40px;
            color: #6b7280;
            font-size: 16px;
        }

        @@media (max-width: 768px) {
            .content-container {
                padding: 0 20px;
            }
        }
    </style>
</head>
<body>
    @* Navbar *@
    @Html.Partial("~/Views/Shared/navbar.cshtml")

    @* Page Header with Tabs *@
    @Html.Partial("~/Views/ShareholderListPage/Components/pageHeader.cshtml", "ShareholderList")

    <div class="page-wrapper">
        <div class="content-container">
            @* Search Bar *@
            @Html.Partial("~/Views/ShareholderListPage/Components/searchBar.cshtml", "Search by folio id, passport number...")

            @if (ViewBag.Error != null)
            {
                <div class="error-message">
                    <strong>Error:</strong> @ViewBag.Error
                </div>
            }

            @* Shareholder Table *@
            <div class="shareholder-table">
                @if (Model != null && Model.Any())
                {
                    int rowNumber = 1;
                    foreach (var shareholder in Model)
                    {
                        var shareholderRow = new AeroHolder_new.Models.ShareholderRowModel
                        {
                            RowNumber = rowNumber++,
                            FolioID = shareholder.FolioID,
                            Name = shareholder.FullName,
                            TicketsIssued = shareholder.NoOfTicketsIssued,
                            Passports = shareholder.NoOfPassports
                        };
                        @Html.Partial("~/Views/ShareholderListPage/Components/shareHolderRow.cshtml", shareholderRow)
                    }
                }
                else
                {
                    <div class="no-data-message">
                        <p>No shareholders found. Click "Add Shareholder" to create a new record.</p>
                    </div>
                }
            </div>

            @* Pagination *@
            @{
                var totalItems = Model != null ? Model.Count : 0;
                var pageSize = 10;
                var totalPages = (int)Math.Ceiling((double)totalItems / pageSize);
            }
            @Html.Partial("~/Views/ShareholderListPage/Components/pagination.cshtml", new AeroHolder_new.Models.PaginationModel
            {
                CurrentPage = 1,
                TotalPages = totalPages > 0 ? totalPages : 1,
                PageSize = pageSize,
                TotalItems = totalItems
            })
        </div>
    </div>

    @* Footer *@
    @Html.Partial("~/Views/Shared/footer.cshtml")

    @* Add Shareholder Modal *@
    @Html.Partial("~/Views/AddShareholderModal/addShareholderModal.cshtml")
    
    @* Edit Shareholder Modal *@
    @Html.Partial("~/Views/EditShareholderModal/editShareholderModal.cshtml")
</body>
</html>
